@using System.Collections
@using Kendo.Mvc.UI

@(Html.Kendo().DropDownListFor(m => m)
            .Name("HCClinicDept")
            .DataValueField("CBDCode")
            .DataTextField("CBDDescription")
            .SelectedIndex(0)
            .DataSource(ds => ds
                .Read(read => read.Action("GetCombos", "ZMCMSSysGetData", new { stext = "CLINICDEPT" }))
            )
            .Filter("contains")
)